<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- explicit list view definition -->
    <record id="view_renta_list" model="ir.ui.view">
      <field name="name">empleado.renta.list</field>
      <field name="model">empleado.renta</field>
      <field name="arch" type="xml">
        <list string="Declaraci칩n de Renta">
          <field name="empleado_id"/>
          <field name="year"/>
          <field name="sueldo_bruto_total"/>
          <field name="impuestos_pagados"/>
        </list>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record id="view_renta_form" model="ir.ui.view">
      <field name="name">empleado.renta.form</field>
      <field name="model">empleado.renta</field>
      <field name="arch" type="xml">
        <form string="Declaraci칩n Anual de Renta">
          <sheet>

            <group>
              <group string="Datos Generales">
                <field name="empleado_id"/>
                <field name="year"/>
              </group>

              <group string="C치lculos">
                <field name="sueldo_bruto_total" readonly="1"/>
                <field name="impuestos_pagados" readonly="1"/>
              </group>
            </group>

            <notebook>
              <page string="N칩minas Vinculadas">
                <field name="nominas_ids" widget="many2many_tags"/>
                <field name="nominas_ids"/>
              </page>
            </notebook>

          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record id="action_renta" model="ir.actions.act_window">
      <field name="name">Declaraciones de Renta</field>
      <field name="res_model">empleado.renta</field>
      <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>