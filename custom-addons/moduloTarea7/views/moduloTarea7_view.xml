<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="modulotarea7_ejemplo_view_tree">
      <field name="name">modulotarea7.ejemplo.view.tree</field>
      <field name="model">modulotarea7.ejemplo</field>
      <field name="arch" type="xml">
        <list string="Módulo Tarea 7 - Ejemplo">
          <field name="name"/>
          <field name="descripcion"/>
          <field name="fecha"/>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="modulotarea7_action_window">
      <field name="name">Registros del módulo Tarea 7</field>
      <field name="res_model">modulotarea7.ejemplo</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="modulotarea7_action_server">
      <field name="name">modulotarea7 server</field>
      <field name="model_id" ref="model_modulotarea7_ejemplo"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Módulo Tarea 7" id="modulotarea7_menu_root"/>

    <!-- menu categories -->
    <menuitem name="Registros Ejemplo" id="modulotarea7_menu_1" parent="modulotarea7_menu_root"/>

    <!-- actions -->
    <menuitem name="Lista de registros" id="modulotarea7_menu_1_list"
              parent="modulotarea7_menu_1"
              action="modulotarea7_action_window"/>
  </data>
</odoo>
